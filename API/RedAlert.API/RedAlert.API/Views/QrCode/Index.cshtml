
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-section-a">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8  col-md-offset-2">
                    <div class="panel panel-default  device-panel">
                    
                        <div class="panel-heading">
                            <h3 class="panel-title">Your personal QR Code</h3>
                        </div>
                        <div class="panel-body">

                            <script>


                            $(document).ready(function () {
                                var senderKey = localStorage.getItem("senderKey");
                                var color = localStorage.getItem("color");
                                if (senderKey == null) {
                                    $('#messageBox').text('Have you registered you device ?');
                                } else {
                                    
                                    $("#qr-Image").attr("src", "http://redalertxfd.azurewebsites.net/QrCode/GenerateQr?senderKey="+senderKey+"&color="+color);
                                }
                            });

                            </script>
                            <div id="messageBox">
                                </div>
                                <img id="qr-Image"  alt=""/>

                                @section Scripts {
                                    @Scripts.Render("~/bundles/jqueryval")
                                }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>