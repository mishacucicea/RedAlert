
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" media="screen" type="text/css" href="~/Content/colorpicker.css" />
<script type="text/javascript" src="~/Scripts/colorpicker.js"></script>
<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8  col-md-offset-2">
                <div class="panel panel-default  device-panel">
                    </br>
                    <div class="panel-heading">
                        <h3 class="panel-title">Default Color</h3>
                    </div>
                    <div class="panel-body">

                        <div id="colorpickerHolder" class="inl-bl"></div>
                        <style>
                            .inl-bl {
                                display: inline-block;
                            }
                        </style>
                        <script>
                            

                            $(document).ready(function () {
                                var savedColor = localStorage.getItem("color");
                                if (savedColor == null) {
                                    savedColor = "ff0000";
                                    localStorage.setItem("color", savedColor);
                                }

                                $('#colorpickerHolder').ColorPicker({                                   
                                color:savedColor,
                                flat: true
                                
                            });

                            $('#saveButton').click(function() {
                                var color = $('.colorpicker_hex input').val();
                                localStorage.setItem("color", color);
                            });
                            });

                        </script>



                    </div>
                    <button type="button" id="saveButton" class="btn btn-default btn-lg" data-clipboard-action="copy" data-clipboard-target="#foo">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save the color
                    </button>
                    </br>
                </div>
            </div>
        </div>
    </div>
</div>
