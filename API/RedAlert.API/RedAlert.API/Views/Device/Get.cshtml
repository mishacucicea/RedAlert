@model RedAlert.API.Models.DeviceModel

@{
    ViewBag.Title = "Retrieve Device Key";
}

<div class="panel-heading">
    <h3 class="panel-title">Retrieve Device Key</h3>
</div>
<div class="panel-body">
    @if (ViewData["deviceKey"] != null)
    {
        <h2> Your device id is: @ViewData["deviceKey"]</h2>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.SerialNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.SerialNumber)
                @Html.ValidationMessageFor(model => model.SerialNumber)
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Get Device Key" class="btn btn-default" />
            </div>
        </div>
    }
</div>