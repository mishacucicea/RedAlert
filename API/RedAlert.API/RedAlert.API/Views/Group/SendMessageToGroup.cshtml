
@{
    ViewBag.Title = "SendMessageToGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RedAlert.API.Models.DeviceGroup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-section-a">
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8  col-md-offset-2">
                    <div class="panel panel-default  device-panel">

                        <div class="panel-heading">
                            <h3 class="panel-title">Send Message to Group</h3>
                        </div>
                        <div class="panel-body">



                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <div class="succesResult">@ViewBag.Result</div>

                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        @Html.Label("GroupName", new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.Editor("groupName")
                                            @Html.ValidationMessage("groupName")

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("color", new { @class = "control-label col-md-2" })

                                        <div class="col-md-10">

                                            @Html.Editor("color")
                                            @Html.ValidationMessage("color")

                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Send" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }
                            @section Scripts {
                                @Scripts.Render("~/bundles/jqueryval")
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



