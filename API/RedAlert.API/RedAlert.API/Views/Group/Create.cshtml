@model RedAlert.API.Models.DeviceGroup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        </br></br>
        <div class="col-xs-12 classforborder">
            <h4>Create new Group</h4>
            <hr> </br>




            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="succesResult">@ViewBag.Result</div>

                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.Label("GroupName", new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            <input id="groupName" class="form-control" type="text" value="">                      
                            @Html.ValidationMessage("groupName")

                        </div>
                    </div>
                  <hr>
                    <div class="form-group">
                        <div class="col-md-4 col-md-offset-5">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            </div>
           
            </div>
        </div>

