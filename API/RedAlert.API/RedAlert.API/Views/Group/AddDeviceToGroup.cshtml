
@{
    ViewBag.Title = "AddDeviceToGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading">
    <h3 class="panel-title">Add Device to group</h3>
</div>
<div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="succesResult">@ViewBag.Result</div>


            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.Label("GroupName", new { @class = "control-label col-md-2" })

                <div class="col-md-10">


                    @Html.Editor("groupName")
                    @Html.ValidationMessage("groupName")

                </div>
            </div>

            <div class="form-group">
                @Html.Label("SerialNumber", new { @class = "control-label col-md-2" })

                <div class="col-md-10">

                    @Html.Editor("serialNumber")
                    @Html.ValidationMessage("serialNumber")

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>