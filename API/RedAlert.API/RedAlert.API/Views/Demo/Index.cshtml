
@{
    ViewBag.Title = "Demo";
}

<h2>Demo - Scenarios</h2>
<hr />
<h4>#1 Build server</h4>
<input id="btnBuilding" type="button" value="Building" />
<input id="btnSuccess" type="button" value="Success" />
<input id="btnFailed" type="button" value="Failed" />
<hr />
<h4>#2 Mood</h4>
@Html.ActionLink("Mood", "Mood", "Device", new { id = 6}, null)
<hr />
<h4>#3 Group Brodcast</h4>
<input id="btnBroadcast" type="button" value="Broadcast" />
<hr />
<h4>#4 Voting</h4>
@Html.ActionLink("Voting", "Voting", "Color")
<hr />

<script>
    function sendMessage(senderKey, color) {
        $.get("/api/message/send", {
            senderkey: senderKey,
            color: color
        });
    }

    function sendMessageToGroup(groupName, color) {
        $.post("/Group/SendMessageToGroup", {
            groupName: groupName,
            color: color
        });
    }

    var senderKey = "2c96fa2g";

    // Build server aaaa.
    $("#btnBuilding").click(function () { sendMessage(senderKey, "magenta") });
    $("#btnSuccess").click(function () { sendMessage(senderKey, "green") });
    $("#btnFailed").click(function () { sendMessage(senderKey, "red") });
    $("#btnBroadcast").click(function () { sendMessageToGroup("Broadcast", "navy") });

</script>
