@using Microsoft.AspNet.Identity
@model RedAlert.API.Models.ManageUserViewModel




<div class="container">
    
            
            @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Change Password Form</h4>
                <hr />
                @Html.ValidationSummary()
                <p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>
                <div class="form-group">
                    
                    @Html.LabelFor(m => m.OldPassword, new {@class = "col-sm-4 control-label"})
                    <div class="col-sm-6">

                        @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-6">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>            <hr />

                <div class="form-group">
                    <div class="col-md-4 col-md-offset-5">
                        <input type="submit" value="Change password" class="btn btn-default" />
                    </div>
                </div>
            }

        </div>
  